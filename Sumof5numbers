package Bootcamp;

import java.util.Scanner;

public class Sumof5numbers {
public static void main (String[] args){
//initialize the values for sum of positive numbers
	int sum=0;
	int[]n=new  int[5];
	
	Scanner sc=new Scanner(System.in);
	//take the input of 5 numbers from console
	System.out.println("Enter an integer:");
	for(int  i=0;i<5;i++)
	{
		n[i]=sc.nextInt();
		//give all numbers as an input for positive variables
		if(n[i]<0)
		{
			sum+=0;
		}else
		{
			sum+=n[i];
			
		}
}
		//print the  sum output 
	System.out.println("Sum of all positive numbers:" +sum);
	}//end of main method
}//end of class method 

