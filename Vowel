package Bootcamp;
import java.util.Scanner;
public class Vowel {
 public static void main(String[ ] args){
			
	 Scanner scanner=new Scanner(System.in);
     System.out.println("Enter a character : ");
     char ch=scanner.next().charAt(0); 
		//taking input from console
	    int count=0;
		switch(ch)
		//using switch case to check whether input is vowel or not
		{
		   case 'a' :
		   case 'e' :
	       case 'i' :
		   case 'o' :
		   case 'u' :
		   case 'A' :
		   case 'E' :
		   case 'I' :
		   case 'O' :
		   case 'U' : 	
			   
		count++;
		}
		if(count==1) //if it is vowel it prints vowel
		{
		System.out.println(" Input character is  a Vowel");
		}
		
		else { //if it is not vowel it prints as a consonant
			
		   if((ch>='a'&&ch<='z')||(ch>='A'&&ch<='Z'))
			System.out.println(ch+" is a Consonant");
		   
		   else //if it is a number it prints as invalid
			System.out.println("Wrong data");		
	        }
	   }//end of main method
		
}//end of class method
