package Bootcamp;
import java.util.Scanner;
public class Years {
public static void main(String[] args){
	
	
	        Scanner in = new Scanner(System.in);
	        
	        //Enter number of days
	        System.out.print("No.of days: ");
	        int days = in.nextInt();

	      //dividing number of days to years
	        int years = (days / 365);
	      //dividing number of years to weeks
	        int weeks = (days % 365) / 7;
	      //dividing number of weeks to days
	            days  = (days % 365) % 7;

	        // Print total years, weeks and remaining days in given days //
	        System.out.println("Number of years = " + years);
	        System.out.println("Number of Weeks = " + weeks);
	        System.out.println("Number of days  = " + days);
	    }//end of main method
	}	//end of class method


